{{ 'section-contact-beauty.css' | asset_url | stylesheet_tag }}

<section id="contact" class="contact-beauty">
  <div class="page-width">
    <div class="section-header">
      <h2 class="section-title">{{ section.settings.title | default: 'Book Your Appointment' }}</h2>
      <p class="section-description">
        {{ section.settings.description | default: 'Ready to experience professional Brazilian waxing and beauty treatments? Contact us today to schedule your appointment.' }}
      </p>
    </div>

    <div class="contact-content">
      <!-- Contact Information -->
      <div class="contact-info">
        <div class="contact-card">
          <h3 class="contact-card-title">{{ section.settings.info_title | default: 'Get In Touch' }}</h3>
          
          <div class="contact-details">
            <div class="contact-item">
              <div class="contact-icon contact-icon-primary">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 1 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 1 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <div class="contact-text">
                <div class="contact-label">Phone</div>
                <div class="contact-value">{{ section.settings.phone | default: '+1 (514) 625-5598' }}</div>
              </div>
            </div>

            <div class="contact-item">
              <div class="contact-icon contact-icon-secondary">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div class="contact-text">
                <div class="contact-label">Email</div>
                <div class="contact-value">{{ section.settings.email | default: 'astridbeauty55@gmail.com' }}</div>
              </div>
            </div>

            <div class="contact-item">
              <div class="contact-icon contact-icon-accent">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
                  <path d="M8 21l4-4 4 4"></path>
                </svg>
              </div>
              <div class="contact-text">
                <div class="contact-label">Instagram</div>
                <div class="contact-value">{{ section.settings.instagram | default: '@astridbeauty_montreal' }}</div>
              </div>
            </div>

            <div class="contact-item">
              <div class="contact-icon contact-icon-location">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div class="contact-text">
                <div class="contact-label">Location</div>
                <div class="contact-value">{{ section.settings.address | default: 'Opp. Hilton Garden Inn<br>Rue Sherbrooke and Rue Hutchison intersection<br>Montreal, QC' }}</div>
              </div>
            </div>
          </div>
        </div>

        {% if section.settings.show_appointment_info %}
          <div class="appointment-info">
            <div class="appointment-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12,6 12,12 16,14"></polyline>
              </svg>
            </div>
            <h3 class="appointment-title">{{ section.settings.appointment_title | default: 'By Appointment Only' }}</h3>
            <p class="appointment-description">
              {{ section.settings.appointment_description | default: 'We operate exclusively by appointment to ensure personalized attention and privacy for each client.' }}
            </p>
            <div class="appointment-note">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="16" y1="2" x2="16" y2="6"></line>
                <line x1="8" y1="2" x2="8" y2="6"></line>
                <line x1="3" y1="10" x2="21" y2="10"></line>
              </svg>
              <span>{{ section.settings.appointment_note | default: 'Flexible scheduling available' }}</span>
            </div>
          </div>
        {% endif %}
      </div>

      <!-- Booking Form -->
      <div class="contact-form">
        <h3 class="form-title">{{ section.settings.form_title | default: 'Quick Booking Form' }}</h3>
        <form class="booking-form" id="booking-form">
          <div class="form-row">
            <div class="form-group">
              <label for="name" class="form-label">Full Name *</label>
              <input type="text" id="name" name="name" required class="form-input" placeholder="Your name">
            </div>
            <div class="form-group">
              <label for="phone" class="form-label">Phone *</label>
              <input type="tel" id="phone" name="phone" required class="form-input" placeholder="Your phone">
            </div>
          </div>

          <div class="form-group">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-input" placeholder="your.email@example.com">
          </div>

          <div class="form-group">
            <label for="service" class="form-label">Service Interested *</label>
            <select id="service" name="service" required class="form-select">
              <option value="">Select a service</option>
              <option value="Brazilian Waxing">Brazilian Waxing</option>
              <option value="Face Threading Combo">Face Threading Combo</option>
              <option value="Face Waxing Combo">Face Waxing Combo</option>
              <option value="Body Waxing Combo">Body Waxing Combo</option>
              <option value="Full Body Waxing Combo">Full Body Waxing Combo</option>
              <option value="Individual Service">Individual Service</option>
              <option value="Consultation">Consultation</option>
            </select>
          </div>

          <div class="form-group">
            <label for="message" class="form-label">Message</label>
            <textarea id="message" name="message" rows="4" class="form-textarea" placeholder="Any special requests or questions..."></textarea>
          </div>

          <button type="submit" class="btn btn-primary btn-full">
            {{ section.settings.form_button_text | default: 'Send Message via WhatsApp' }}
          </button>
        </form>

        {% if section.settings.show_discount_reminder %}
          <div class="discount-reminder">
            <p><strong>Remember:</strong> {{ section.settings.discount_text | default: 'Get 10% off on all combos for your first visit!' }}</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('booking-form');
    
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const formData = new FormData(form);
        const name = formData.get('name');
        const email = formData.get('email');
        const phone = formData.get('phone');
        const service = formData.get('service');
        const message = formData.get('message');
        
        const whatsappMessage = `Hi! I'd like to book an appointment at Astrid Beauty Home Studio.

Name: ${name}
Email: ${email}
Phone: ${phone}
Service: ${service}
Message: ${message}`;
        
        const whatsappUrl = `https://wa.me/15146255598?text=${encodeURIComponent(whatsappMessage)}`;
        window.open(whatsappUrl, '_blank');
      });
    }
  });
</script>

